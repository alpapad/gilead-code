<?xml version="1.0" encoding="UTF-8"?>
<web-app>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Sample.html</welcome-file>
  </welcome-file-list>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>UserRemote</servlet-name>
    <servlet-class>net.sf.gilead.sample.server.UserRemoteService</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>UserRemote</servlet-name>
    <url-pattern>/sample/UserRemote</url-pattern>
  </servlet-mapping>
  
   <!-- Servlets -->
  <servlet>
    <servlet-name>LoadingService</servlet-name>
    <servlet-class>net.sf.gilead.gwt.server.LoadingServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>LoadingService</servlet-name>
    <url-pattern>/sample/LoadingService</url-pattern>
  </servlet-mapping>

</web-app>